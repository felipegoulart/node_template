{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "node16",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@tests/*": ["./tests/*"]
    },
    "outDir": "./dist",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
